# Database
# For local development, use a PostgreSQL database
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://postgres:password@localhost:5432/tabpay?schema=public"

# Server
PORT=3000
NODE_ENV=development

# JWT (for session management)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Stripe (test keys)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Service Fee (in dollars)
TABPAY_SERVICE_FEE=1.50

# Tax Rate (as decimal, e.g., 0.0875 = 8.75%)
DEFAULT_TAX_RATE=0.0875
